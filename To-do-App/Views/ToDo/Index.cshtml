@model IEnumerable<ToDo>
<section style="background-color: #eee;">
    <div >
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div >
                <div class="card rounded-3">
                    <div class="card-body p-4">

                        <h4 class="text-center my-3 pb-3">To Do App</h4>
                        <div class="col-12">
                            <a type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary" asp-action="New" >Add New</a>
                        </div>
                        <form class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
                            <div class="col-12">
                               
                            </div>

                        </form>

                        <table class="table mb-4">
                            <thead>
                                <tr>
                                    <th scope="col">No.</th>
                                    <th scope="col">Todo item</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">DueDate</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Status</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model){
                                    if (item.Status=="In Progress"){
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Task</td>
                                    <td>@item.Description</td>
                                    <td>@item.DueDate</td>
                                    <td>@item.Category</td>
                                    <td>@item.Status</td>
                                    

                                    <td>
                                            <a type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary" asp-action="Edit" asp-route-Id="@item.Id"> Edit </a>
                                        
                                            
                                    </td>
                                    <td>
                                                <a type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-success ms-1" asp-action="EditStatus" asp-route-Id="@item.Id">Finished</a>
                                    </td>
                                    <td>
                                                <a type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-danger" asp-action="Delete" asp-route-Id="@item.Id">Delete </a>
                                    </td>
                                </tr>
                                }
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

   

</section>


<section  style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="card rounded-3">
                    <div class="card-body p-4">

                        <h4 >Finished</h4>
                      
                        <form class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
                            <div class="col-12">
                            </div>




                        </form>

                        <table class="table mb-4">
                            <thead>
                                <tr>
                                    <th scope="col">No.</th>
                                    <th scope="col">Todo item</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">DueDate</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Status</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if(item.Status=="Finished"){
                                    <tr>
                                        <th scope="row">@item.Id</th>
                                        <td>@item.Task</td>
                                        <td>@item.Description</td>
                                        <td>@item.DueDate</td>
                                        <td>@item.Category</td>
                                        <td>@item.Status</td>

                                        <td>
                                            
                                            <a type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-danger" asp-action="Delete" asp-route-Id="@item.Id">Delete ..</a>
                                           
                                        </td>
                                    </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>